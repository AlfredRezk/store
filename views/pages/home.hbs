<div class="row">
  {{#each products}}
    <div class="col-12 col-md-6 col-lg-4 col-xl-3">
      <a href="/products/{{_id}}">
      <div class="card">
        <img src="/img/{{image}}" class="card-img-top" alt="{{title}}" style="max-height: 250px;"/>
        <div class="card-body">
          <h5 class="card-title text-center">{{title}}</h5>
          <h3 class="card-text text-center text-warning">${{price}}</h3>
          <div class="text-center">
          <a href="/cart/add/{{_id}}" class="btn btn-warning">Add to Cart</a>
          </div>
        </div>
      </div>

      </a>

    </div>
  {{else}}
    <div class="text-center">
      <h4>No Products !</h4>
    </div>
  {{/each}}
</div>