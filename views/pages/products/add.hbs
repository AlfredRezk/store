<div class="row">
  <div class="col-12 col-md-8 col-lg-6 mx-auto mt-5">
    <div class="card shadow">
      <div class="card-header text-center bg-primary text-light">
        <h3>ADD PRODUCT</h3>
      </div>
      <div class="card-body">
        <form action="/products" method="POST" enctype="multipart/form-data" novalidate>
    
            <div class="mb-3">
              <input
                type="text"
                name="title"
                placeholder="Product Title"
                class="form-control"
                value="{{title}}"
              />
            </div>
            <div class="mb-3">
              <input
                type="number"
                name="price"
                placeholder="Product Price"
                class="form-control"
                value="{{price}}"
              />
            </div>


          <div class="mb-3">
            <input
              type="file"
              name="image"
              class="form-control"
            />
          </div>
         
          <div class="mb-3">
            <label for="editor" class="form-label">Product Description</label>
            <textarea
            id="editor"
              name="description"
         
          
            ></textarea>

          </div>
         

        
          <div class="text-center">
            <button type="submit" class="btn btn-primary"> ADD</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>